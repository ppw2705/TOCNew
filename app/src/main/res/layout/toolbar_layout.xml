<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rel_cart"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/txt_heading_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:paddingTop="@dimen/_5dp"
        android:layout_marginLeft="@dimen/_5dp"
        android:layout_toRightOf="@+id/txt_heading"
        android:text="Asia"
        android:textColor="@color/white"
        android:textSize="18sp"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="2dp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginRight="20dp"
        android:focusable="true">
        <ImageView
            android:id="@+id/img_help"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/notify"/>
        <TextView
            android:id="@+id/text_notify_count"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:gravity="center"
            android:layout_alignTop="@id/img_help"
            android:layout_alignRight="@id/img_help"
            android:text="10"
            android:textColor="#FFF"
            android:textSize="8sp"
            android:textStyle="bold"
            android:background="@drawable/badge_circle"
            android:visibility="gone"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="@dimen/_30dp"
        android:layout_height="@dimen/_30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="2dp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginRight="20dp"
        android:focusable="true"
        android:src="@drawable/back"
        android:visibility="gone"/>
</RelativeLayout>